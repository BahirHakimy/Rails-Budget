<h2 class="text-2xl text-slate-600 font-bold my-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:'text-gray-500 font-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"p-1 border border-gray-300 block w-full outline-[#ccf8] text-xl rounded-md shadow-md" %>
  </div>

  <div class="field">
    <%= f.label :password, class:'text-gray-500 font-bold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"p-1 border border-gray-300 block w-full outline-[#ccf8] text-xl rounded-md shadow-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex w-full d-flex justify-center">
    <%= f.submit "Log in", class:'bg-sky-600 text-slate-50 p-2 mx-auto my-2 rounded-sm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
